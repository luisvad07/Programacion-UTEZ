<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".TarjetaVideo">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tarjetavideo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="318dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:text="Tarjeta de Video"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <RadioGroup
        android:id="@+id/rgTarjetaVideo"
        android:layout_width="154dp"
        android:layout_height="145dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/rbTar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NVIDIA GTX" />

        <RadioButton
            android:id="@+id/rbTar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RTX" />

        <RadioButton
            android:id="@+id/rbTar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUADRO" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSiguiente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="@+id/rgTarjetaVideo"
        app:layout_constraintStart_toStartOf="@+id/rgTarjetaVideo"
        app:layout_constraintTop_toBottomOf="@+id/rgTarjetaVideo" />
</androidx.constraintlayout.widget.ConstraintLayout>