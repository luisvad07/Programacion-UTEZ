<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".Memoria">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/memoria" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Memoria"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <RadioGroup
        android:id="@+id/rgMemoria"
        android:layout_width="172dp"
        android:layout_height="145dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/rb4GB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4GB" />

        <RadioButton
            android:id="@+id/rb8GB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8GB" />

        <RadioButton
            android:id="@+id/rb16GB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16GB" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="@+id/rgMemoria"
        app:layout_constraintStart_toStartOf="@+id/rgMemoria"
        app:layout_constraintTop_toBottomOf="@+id/rgMemoria" />
</androidx.constraintlayout.widget.ConstraintLayout>