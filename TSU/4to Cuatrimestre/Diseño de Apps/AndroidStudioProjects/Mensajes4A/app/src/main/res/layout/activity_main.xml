<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6FFEB3B"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnToast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#4CAF50"
        android:text="Toast"
        app:layout_constraintEnd_toEndOf="@+id/txtTexto"
        app:layout_constraintStart_toStartOf="@+id/txtTexto"
        app:layout_constraintTop_toBottomOf="@+id/txtTexto" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="Log"
        app:layout_constraintEnd_toEndOf="@+id/btnAlertdialog"
        app:layout_constraintStart_toStartOf="@+id/btnAlertdialog"
        app:layout_constraintTop_toBottomOf="@+id/btnAlertdialog" />

    <Button
        android:id="@+id/btnSnackbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="Snackbar"
        app:layout_constraintEnd_toEndOf="@+id/btnLog"
        app:layout_constraintStart_toStartOf="@+id/btnLog"
        app:layout_constraintTop_toBottomOf="@+id/btnLog" />

    <Button
        android:id="@+id/btnAlertdialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="AlertDialog"
        app:layout_constraintEnd_toEndOf="@+id/btnToast"
        app:layout_constraintStart_toStartOf="@+id/btnToast"
        app:layout_constraintTop_toBottomOf="@+id/btnToast" />

    <EditText
        android:id="@+id/txtTexto"
        android:layout_width="226dp"
        android:layout_height="54dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>